<!DOCTYPE html>
<html>
<head>
  <%= render "layouts/head" %>
  <%= stylesheet_link_tag "best", media: "all", "data-turbolinks-track" => true %>
  <%= yield :head %>
</head>
<body class="<%= controller_name %> <%= controller_name %>-<%= controller.action_name %> pages--<%= params[:id] %>">

<div id="wrapper">
  <article class="type-system-sans">
    <%= yield %>
  </article>

  <%= render "layouts/footer" %>
</div>

<%= javascript_include_tag "sampler", "data-turbolinks-track" => true %>
<%= render 'layouts/analytics' %>
</body>
</html>
