<%= form.hidden_field :featured %>

<%= form.label :performed_at, "Date of show" %>
<%= form.date_field :performed_at, value: @show.new_record? && Date.tomorrow %>

<%= form.label :tour_notes, "Tour notes" %>
<%= form.text_field :tour_notes, placeholder: "Shows up under the date" %>

<%= form.label :starts_at, "Time of admission" %>
<%= form.time_field :starts_at, step: 15.minutes, value: @show.new_record? && "21:00" %>

<%= form.label :venue_id, "Venue" %>
<%= form.collection_select :venue_id, Venue.by_name, :id, :name %>

<%= form.label :banner %>
<%= form.file_field :banner %>

<%= form.label :url, "Event URL (facebook, event page, etc)" %>
<%= form.url_field :url, placeholder: "http://awesomebar.com/aqueous" %>

<%= form.label :price, "Admission price" %>
<%= form.number_field :price, placeholder: "$10" %>

<%= form.label :age_restriction, "Age restriction (leave blank for all ages)" %>
<%= form.number_field :age_restriction, placeholder: "21" %>
