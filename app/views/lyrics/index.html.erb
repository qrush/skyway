<% @title = 'Lyrics' %>

<%= render "searches/form" %>

<div id="lyrics">
  <p>
    Here's all the lyrics to our songs. Dig in to each song for videos, shows they were played at, and more!
  </p>

  <% cache @albums do %>
    <% @albums.each do |album| %>
      <article>
        <h3><%= album.name %></h3>
        <% album.songs.each do |song| %>
          <section class="<%= cycle('left', 'right') %>">
            <p>
              <%= link_to song.name, song, id: dom_id(song), class: song.version %>
            </p>
            <div class="info">
              <%= raw_format song.lyrics || '<em>Lyrics coming soon!</em>'.html_safe %>
            </div>
          </section>
        <% end %>
      </article>
    <% end %>
  <% end %>
</div>
