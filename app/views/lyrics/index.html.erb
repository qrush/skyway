<% @title = 'Lyrics' %>

<%= render "searches/form" %>

<div id="lyrics">
  <p>
    Here's all the lyrics to our songs. Dig in to each song for videos, shows they were played at, and more!
  </p>

  <% @albums.each do |album| %>
    <article>
      <h3>
        <% if admin? %>
          <%= link_to album.name, [:edit, album] %>
        <% else %>
          <%= link_to album.name, album.bandcamp_url %>
        <% end %>
      </h3>
      <% cache album do %>
        <% album.songs_with_lyrics.each do |song| %>
          <section class="<%= cycle('left', 'right') %>">
            <p>
              <%= link_to song.name, song, id: dom_id(song), class: song.version %>
            </p>
            <div class="info">
              <%= raw_format song.lyrics || '<em>Lyrics coming soon!</em>'.html_safe %>
            </div>
          </section>
        <% end %>
      <% end %>
    </article>
<% end %>
</div>
